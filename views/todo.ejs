<html>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <div class='my-5'>
        <div class="container w-25 bg bg-dark rounded-lg">
            <div class='py-3 px-1'>
            <p class='text-white h3'>To-Do-List</p>
            <form <% if (!index) { %>
                action="/addtodo" 
            <% } else{ %>
                action="/editedTodo" 
           <% } %> method="POST">
            <div class='row w-100'>
                <div class='col-9'>
                    <input type="text" 
                    <% if (index) { %>
                     value=<%= allTodos[index]%> 
                    <% } %>
                    name="todo"  placeholder="Add a task" class=" bg-dark form-control text-white" />
                </div>
                <div class='col-3'>
                    <% if (!index) { %>
                    <button type="submit" class="btn btn-success">Add</button>
                     
                    <% } else{ %>
                        <input type="hidden" value="<%=index%>" name="ind" >
                        <button type="submit" class="btn btn-primary">Save</button>

                   <% } %>
                </div>
            </div>
        </form>
            <div class='mt-2'>
                <% allTodos.map ( (each,index)=>{ %>
                <div class='row' key={i}>
                    <div class='col-8'>
                        <p class='text-white h6'><%= each %> </p>
                    </div>
                    <div class='col-4'>
                        <div class="row">
                            <div class='col-6'>
                                <form action="/editTodo" method="POST">
    <input type="hidden" value="<%=index%>" name="ind" >
                            <button style="border:none;" class="bg-dark"><i class='fa fa-lg fa-edit text-primary font-weight-bold' style="cursor:pointer;" ></i></button></form>
                            </div>
                            <div class='col-6'>
                                <form action="/deleteTodo" method="POST">
    <input type="hidden" value="<%=index%>" name="ind" >
                            <button  style="border:none;" class="bg-dark"><i class='fa fa-lg fa-trash text-danger font-weight-bold' style="cursor:pointer;"></i></button></form>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
            </div>
        </div>
    </div>
    


</html>